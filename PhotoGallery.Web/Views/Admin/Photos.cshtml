@model IEnumerable<PhotoGallery.Domain.Entities.Photo>

<h3>All Photos</h3>

<form asp-controller="Admin"
      asp-action="BulkDeletePhotos"
      method="post"
      onsubmit="return confirm('Delete selected photos?');">

    @Html.AntiForgeryToken()

    <table class="table table-bordered align-middle">
        <thead>
            <tr>
                <th>
                    <input type="checkbox" id="selectAll"/>
                </th>
                <th>Thumbnail</th>
                <th>User</th>
                <th>Description</th>
                <th>Uploaded</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var photo in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox"
                               name="photoIds"
                               value="@photo.Id" />
                    </td>
                    <td class="text-center align-middle">
                        <a asp-controller="Gallery"
                           asp-action="Details"
                           asp-route-id="@photo.Id">
                            <img src="/Files/Thumbnail/@photo.Id"
                                 width="64"
                                 height="64"
                                 class="rounded object-fit-cover" />
                        </a>
                    </td>

                    <td>@photo.User.Email</td>
                    <td>@photo.Description</td>
                    <td>@photo.UploadedAtUtc</td>
                    <td class="text-nowrap text-center">
                        <!-- EDIT (GET) -->
                        <a class="btn btn-sm btn-outline-primary me-2"
                           asp-controller="Gallery"
                           asp-action="Details"
                           asp-route-id="@photo.Id">
                            View
                        </a>

                        <a class="btn btn-sm btn-outline-secondary me-2"
                           asp-controller="Photos"
                           asp-action="Edit"
                           asp-route-id="@photo.Id">
                            Edit
                        </a>

                        <!-- DELETE (POST) -->
                        <button type="submit"
                                formaction="@Url.Action("DeletePhoto", "Admin")"
                                formmethod="post"
                                name="id"
                                value="@photo.Id"
                                class="btn btn-sm btn-danger"
                                onclick="return confirm('Delete this photo?');">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit"
            id="bulkDeleteBtn"
            class="btn btn-danger mt-2"
            disabled>
        Delete selected
    </button>

</form>

@section Scripts {
    <script>
        const selectAll = document.getElementById('selectAll');
        const checkboxes = document.querySelectorAll('input[name="photoIds"]');
        const bulkDeleteBtn = document.getElementById('bulkDeleteBtn');

        function updateBulkDeleteState() {
            bulkDeleteBtn.disabled = !Array.from(checkboxes).some(cb => cb.checked);
        }

        selectAll?.addEventListener('change', function () {
            checkboxes.forEach(cb => cb.checked = this.checked);
            updateBulkDeleteState();
        });

        checkboxes.forEach(cb => {
            cb.addEventListener('change', updateBulkDeleteState);
        });
    </script>
}