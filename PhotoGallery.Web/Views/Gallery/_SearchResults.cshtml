@model IEnumerable<PhotoGallery.Application.DTOs.PhotoListItemDto>

@if (!Model.Any())
{
    <p class="text-muted">No results found.</p>
}
else
{
    <div class="d-flex flex-column align-items-center">
        @foreach (var photo in Model)
        {
            <div class="photo-card mb-4">

                <a asp-controller="Gallery"
                   asp-action="Details"
                   asp-route-id="@photo.Id">
                    <img src="@photo.ThumbnailUrl" class="photo-image" />
                </a>
                <h6 class="mt-2">@photo.Description</h6>

                <div class="text-muted">
                    @foreach (var tag in photo.Hashtags)
                    {
                        <span class="badge bg-secondary me-1 mb-1">#@tag</span>
                    }
                </div>

                <div class="photo-meta d-flex justify-content-between">
                    <small>@photo.AuthorEmail</small>
                    <small>@photo.UploadedAt.ToString("dd.MM.yyyy HH:mm")</small>
                </div>

            </div>
        }
    </div>
}
