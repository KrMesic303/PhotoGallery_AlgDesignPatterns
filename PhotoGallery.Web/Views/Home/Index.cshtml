@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mt-5">
    <h1 class="display-4 mb-3">Welcome to PhotoGallery</h1>
    <p class="lead mb-4">
        Upload, manage, and share your photos easily. Choose your package and get started today!
    </p>

    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <a class="btn btn-primary btn-lg" asp-controller="Photos" asp-action="Upload">Upload a Photo</a>
    }
    else
    {
        <a class="btn btn-primary btn-lg" asp-area="Identity" asp-page="/Account/Register">Create Account</a>
        <a class="btn btn-outline-secondary btn-lg" asp-area="Identity" asp-page="/Account/Login">Login</a>
    }
</div>
